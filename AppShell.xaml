<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kamata.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Kamata.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Kamata">
    <TabBar>
        <Tab Title="Home"
             Icon="home">
            <ShellContent Title="Rides" Icon="ride.png" ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Services"
             Icon="services">
            <ShellContent ContentTemplate="{DataTemplate views:ServicesPage}" />
        </Tab>
        <Tab Title="Activity"
             Icon="activity">
            <ShellContent ContentTemplate="{DataTemplate views:ActvivityPage}" />
        </Tab>
        <Tab Title="Account"
             Icon="account">
            <ShellContent ContentTemplate="{DataTemplate views:MyProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
